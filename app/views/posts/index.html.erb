<div class='text-center'>
  <div class='container-fluid'>
    <div class='row'>

      <% @posts.each do |p| %>
      <div class='col-lg-12 col-md-12 col-sm-12 col-xs-12' style='padding:0px'>
        <h4><%= p.title %></h4>
        <img src="<%= p.image %>">
        <br>
        <span style='padding-right:12em'>143 points â€¢ 22 comments</span>
        <br>

        <div style='padding-right:18em'>
          <% if @vote.nil? %>
            <%= link_to post_votes_path(@post, { is_up: true }), method: :post do %>
              <i class="fa fa-arrow-circle-up fa-2x" aria-hidden="true"></i>
            <% end %>
            <%= link_to post_votes_path(@post, { is_up: false }), method: :post do %>
              <i class="fa fa-arrow-circle-down fa-2x" aria-hidden="true"></i>
            <% end %>
          <% elsif @vote.is_up? %>
            <%= link_to vote_path(@vote), method: :delete do %>
              <i class="fa fa-arrow-circle-up fa-2x" aria-hidden="true"></i>
            <% end %>
            <%= link_to vote_path(@vote, { is_up: false }), method: :patch do %>
              <i class="fa fa-arrow-circle-down fa-2x" aria-hidden="true"></i>
            <% end %>
          <% else %>
            <%= link_to vote_path(@vote, { is_up: true }), method: :patch do %>
              <i class="fa fa-arrow-circle-up fa-2x" aria-hidden="true"></i>
            <% end %>
            <%= link_to vote_path(@vote), method: :delete do %>
              <i class="fa fa-arrow-circle-down fa-2x" aria-hidden="true"></i>
            <% end %>
          <% end %>
          <i class="fa fa-commenting-o fa-2x" aria-hidden="true"></i>
        </div>
        <hr style='width:27em'>
      </div>
      <% end %>

    </div>
  </div>
</div>
